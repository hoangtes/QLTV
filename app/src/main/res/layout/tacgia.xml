<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#A3D4F7"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_tentacgia"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Nhập tên tác giả..."
            android:background="@color/white"
            android:layout_marginRight="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_tentacgia"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_timkiem"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFA500"
            android:text="Tìm"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <Button
            android:id="@+id/btn_them"
            android:layout_width="150dp"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FFA500"
            android:text="Thêm"
            android:textSize="20sp"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/btn_sua"
            android:layout_width="150dp"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FFA500"
            android:text="Sửa"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <Button
            android:id="@+id/btn_tailai"
            android:layout_width="150dp"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FFA500"
            android:text="Tải lại"
            android:textSize="20sp"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/btn_xoa"
            android:layout_width="150dp"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FFA500"
            android:text="Xóa"
            android:textSize="20sp"/>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E3F2FD">

            <TableRow android:background="#90CAF9">

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_vienvuong"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Mã tác giả"/>

                <TextView
                    android:layout_width="238dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_vienvuong"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Tên tác giả" />

            </TableRow>

            <!-- ScrollView for the data rows -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="260dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableLayout
                        android:id="@+id/tblTacGia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <!-- Dữ liệu từ CSDL sẽ được hiển thị ở đây -->
                    </TableLayout>
                </HorizontalScrollView>
            </ScrollView>

        </TableLayout>
    </HorizontalScrollView>

</LinearLayout>
